    <changeSet id="create_account" author="SISHRAK0">
        <createTable tableName="account">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk-acc"/>
            </column>
            <column name="account_type" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="balance" type="DECIMAL">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="transaction" author="SISHRAK0">
        <createTable tableName="transaction">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_transaction"/>
            </column>
            <column name="amount" type="DECIMAL">
                <constraints nullable="false"/>
            </column>
            <column name="transaction_time" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="data_source_error_log" author="SISHRAK0">
        <createTable tableName="data_source_error_log">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_data_source_error_log"/>
            </column>
            <column name="text_exception_stacktrace" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="error_message" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="method_signature" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="log_time" type="DATETIME">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>



