<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">
    <include file="db/changelog/2024/10/22-01-changelog.sql"/>
    <include file="db/changelog/2024/10/22-02-changelog.sql"/>

    <changeSet id="2023-10-01-1" author="eda">
        <addColumn tableName="transaction">
            <column name="status" type="varchar(255)" />
            <column name="transaction_id" type="uuid" />
            <column name="timestamp" type="timestamp" />
        </addColumn>

        <createIndex tableName="transaction" unique="true" indexName="idx_transaction_transaction_id">
            <column name="transaction_id"/>
        </createIndex>

        <addColumn tableName="account">
            <column name="status" type="varchar(255)" />
            <column name="account_id" type="uuid" />
            <column name="frozen_amount" type="decimal(19,2)" defaultValueNumeric="0" />
        </addColumn>

        <createIndex tableName="account" unique="true" indexName="idx_account_account_id">
            <column name="account_id"/>
        </createIndex>

        <addColumn tableName="client">
            <column name="client_id" type="uuid" />
        </addColumn>

        <createIndex tableName="client" unique="true" indexName="idx_client_client_id">
            <column name="client_id"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>